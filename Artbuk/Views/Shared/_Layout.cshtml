<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artbuk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Artbuk.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-3">
                    <h1>
                        <a asp-controller="Feed" asp-action="Feed">ArtBuk</a>
                    </h1>
                </div>
                <nav class="col-9">
                    <div class="col-4 search">
                        <form class="search-item">
                            <input type="text" class="text-input" placeholder="Поиск по постам..."/>
                        </form>
                    </div>
                    <ul class="col-5">
                        <li><a asp-controller="Feed" asp-action="Feed">Лента</a></li>
                        <li><a>О нас</a></li>
                        <li><a asp-controller="Profile" asp-action="Profile">Профиль</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Artbuk@* - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
