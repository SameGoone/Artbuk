@model Artbuk.Infrastructure.ViewData.PostPageData
@{
    //Layout = null;
}

<html>
<head>
    <title>Пост</title>

    <script src="https://code.jquery.com/jquery-3.6.3.js"></script>
</head>
<style>
    .genre {
        display: inline-block
    }
</style>
<body>
    <h3>@Model.Post.Body</h3>

    <br />
    <br />
    <img width="200px" height="200px" src=@Url.Content(@Model.ImagePath) runat="server" />
    <div>
        <span style ="display:inline">Автор: </span>
        <a style="display:inline" href="~/Profile/Profile?userId=@Model.Creator.Id">@Model.Creator.Name</a>
    </div>
    <p>Содержание: @Model.Post.Body</p>
    <p>Дата создания: @Model.Post.CreatedOn</p>
    <p>Жанр: @Model.Genre</p>
    <p>Софт: @Model.Software</p>
    <div>
        <span style="display:inline">Лайки: </span>
        <a style="display:inline" href="~/Users/PostLikedBy?postId=@Model.Post.Id">
            <span id="likes-count">@Model.LikesCount</span>
        </a>
        <input style="display:inline" type="checkbox" onclick="onLikeClick('@Url.Action("AddLike", "Like")', '@Model.Post.Id');" checked="@Model.IsLiked" />
    </div>
    <div id="comment-container">
        <h3>Комментарии</h3>
        <form class="comment-form" method="post" action="~/Post/AddComment">
            <input type="text" name="body" />
            <input type="hidden" name="postId" value="@Model.Post.Id" />
            <button type="submit">Создать комментарий</button>
        </form>
        @foreach (var comment in Model.Comments)
        {
            <div>
                <div style="display:inline">
                    <a style="display:inline" href="~/Profile/Profile?userId=@comment.Creator.Id">
                        @comment.Creator.Name
                    </a>
                    <span>: @comment.Body</span>
                </div>
                @if(comment.IsRemovable)
                {
                    <form style="display:inline" method="post" action="~/Post/DeleteComment">
                        <input type="hidden" name="commentId" value="@comment.Id" />
                        <button type="submit">Удалить</button>
                    </form>
                }
            </div>
        }
    </div>

    @if (Model.IsRemovable)
    {
        <form method="post" action="~/Profile/DeletePost">
            <input type="hidden" name="postId" value="@Model.Post.Id" />
            <button type="submit">Удалить</button>
        </form>
    }
    <a href="~/Feed/Feed">Назад</a>
</body>
</html>
