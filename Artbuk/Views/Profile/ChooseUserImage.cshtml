@{
    //Layout = null;
}

<html>
<head>
    <meta charset='utf-8' />
    <title>Выбор аватарки</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4 form-block">
                <h2>Выберите изображение</h2>
                <form method='post' enctype="multipart/form-data">
                    <input type="hidden" name="userId" value="@ViewBag.UserId">
                    <input class="form-control" type="file" name="formFile" id="formFile" accept="image/png, image/jpeg">
                    <button type='submit' class="btn btn-success admin-add">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
    <script src="js/site.js" asp-append-version="true"></script>
</body>
</html>