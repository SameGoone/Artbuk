@model Artbuk.Infrastructure.ViewData.ProfileData
@{
    //Layout = null;
}

<html>
<head>
    <title>Профиль</title>
</head>
<body>
    <h3>Профиль</h3>
    <br />
    <br />
    <div>
        <h4>@Model.Name</h4>
    </div>
    <div>
        <img width="200px" height="200px" src=@Url.Content(@Model.ImagePath) runat="server" />
        @if(Model.IsMe)
        {
            <form method="get" action="~/Profile/ChooseUserImage">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <button type="submit">Установить аватарку</button>
            </form>
        }

        @if (!Model.IsMe)
        {
            var subscribeDisplayMode = (!Model.IsSubscribed) ? "block" : "none";
            var unsubscribeDisplayMode = (Model.IsSubscribed) ? "block" : "none";

            <div id="subscribe-@Model.UserId" style="display: @subscribeDisplayMode;">
                <button onclick="onSubscribeClick('@Url.Action("Subscribe", "Profile")', '@Model.UserId');">Подписаться</button>
            </div>

            <div id="unsubscribe-@Model.UserId" style="display: @unsubscribeDisplayMode;">
                <button onclick="onUnsubscribeClick('@Url.Action("Unsubscribe", "Profile")', '@Model.UserId');">Отписаться</button>
            </div>

            <div>
                <a href="~/Chat/Chat?withUserId=@Model.UserId">
                    Чат
                </a>
            </div>
        }
    </div>

    @foreach (var postData in Model.Posts)
    {
        <div>
            <a href="~/Post/Post?postId=@postData.PostId">
                <img width="200px" height="200px" src=@Url.Content(@postData.ImagePath) runat="server" />
            </a>
        </div>
    }
</body>
</html>