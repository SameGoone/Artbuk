@model FeedData
@{
    Layout = null;
}

<html>
    <head>
        <meta charset='utf-8' />
        <title>Создать пост</title>
    </head>
    <body>
        <h2>Создать пост</h2>
        <div class="col-2">
        <form method='post'>
            <p>
                <label>Содержимое:</label><br />
                <input type="text" name="Body" />
            </p>
            <select name="id_genres" class="form-select" aria-label="Категории">
                 @foreach(var genre in Model.Genres)
                 {
                   <option name="genreId" value="@genre.Id">@genre.Name</option>
                 }
            </select>
            <input type='submit' value='Создать' />
        </form>
        </div>
    </body>
</html>
